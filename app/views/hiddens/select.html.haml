- content_for :title do
  = "Select hidden genres for " + @page.title
.title= @page.title
.hiddens
  = form_tag hiddens_path do
    = hidden_field_tag(:page_id, @page.id)
    .filters
      = select_tag("page[hidden_ids][]", options_from_collection_for_select(Hidden.all, 'id', 'name', selected = @page.hiddens.map(&:id)), :multiple => true)
    .button= submit_tag "Update Hidden Genres"
  = link_to "Add Hidden Genres", hidden_path(@page, :add => true)
