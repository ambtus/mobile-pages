- content_for :title do
  = @title
.form
  - form_for @new_page do |f|
    = f.text_field :base_url, :maxlength => 255, :size => 80, :value => Page::BASE_URL_PLACEHOLDER, :onfocus=>"this.value=''"
    = f.text_field :url_substitutions, :maxlength => 255, :size => 80, :value => Page::URL_SUBSTITUTIONS_PLACEHOLDER, :onfocus=>"this.value=''"
    = f.text_area :urls, :rows => 10, :cols => 80, :value => Page::URLS_PLACEHOLDER, :onfocus=>"this.value=''"
    = f.text_field :title, :maxlength => 255, :size => 80, :value => Page::TITLE_PLACEHOLDER, :onfocus=>"this.value=''"
    .button= f.submit "Create"
