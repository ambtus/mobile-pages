- content_for :title do
  = "Scrub " + @page.title

.title= @page.title
.info
  remove above the top selection and below the bottom selection
%a{:href => "#end"} Jump to end
.form
  = form_for @page do |f|
    .top
      = @page.nodes.size.to_s + " nodes"
      .button= f.submit "Scrub"
      Top
      - @page.top_nodes.each_with_index do |node,index|
        .node
          = radio_button_tag "top_node", index + 1, false
          = label_tag "top_node_#{index + 1}", node
    .bottom
      Bottom
      - @page.bottom_nodes.each_with_index do |node,index|
        .node
          - id = @page.bottom_nodes.size - index
          = radio_button_tag "bottom_node", id, false
          = label_tag "bottom_node_#{id}", node
      .button= f.submit "Scrub"
%a{:name => "end"}
