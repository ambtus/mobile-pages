-title = "Preview Text #{@section_number} for page: #{@page.title}"
-content_for(:title, title)
%h1=title
.content
  = form_for @page do |f|
    = f.submit "Confirm Text Edit"
    = hidden_field_tag(:section, @section_number)
    = hidden_field_tag(:new, @new)
%h2 Old
#original=raw @old
%h2 New
#edited=raw @new

