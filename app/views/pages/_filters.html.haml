.sort_by
  - ['random', 'first_created', 'last_created', 'first_read', 'last_read', 'longest', 'shortest'].each do |choice|
    = radio_button_tag :sort_by, choice, @sort_by == choice
    = label_tag "sort_by_#{choice}", choice.humanize.capitalize
.last_read
  - ['Unread', 'Parts', 'Read'].each do |choice|
    = radio_button_tag :unread, choice, @unread == choice
    = label_tag "unread_#{choice}", choice
.size
  - ['Longer', *Page::SIZES.reverse, 'Shorter'].each do |choice|
    = radio_button_tag :size, choice, @size == choice
    = label_tag "size_#{choice}", choice
.stars
  - ['Better', '5', '4', '3', '2', '1', 'Worse', 'unfinished'].each do |choice|
    = radio_button_tag :stars, choice, @stars == choice
    = label_tag "stars_#{choice}", choice
.soon
  - ['Now', *Soon::LABELS, 'Never'].each do |choice|
    = radio_button_tag :soon, choice, @soon == choice
    = label_tag "soon_#{choice}", choice
.type
  - ['Collection', 'Series', 'Book', 'Chapter', 'Single', 'none', 'all'].each do |choice|
    = radio_button_tag :type, choice, @type == choice
    = label_tag "type_#{choice}", choice
