- content_for :title do
  = "Refetch " + @page.title
.form
  = form_tag refetches_path do
    = hidden_field_tag(:page_id, @page.id)
    - if @page.ao3?
      = text_field_tag :url, @page.ao3_url, :maxlength => 255, :size => 33
    - elsif @page.parts.blank?
      = text_field_tag :url, @page.url, :maxlength => 255, :size => 33
    - else
      .parts= text_area_tag :url_list, @page.url_list, :rows => @page.parts.size + 2, :cols => 33
      -if @page.parts.first.ao3?
        = text_field_tag :url, @page.ao3_url, :maxlength => 255, :size => 33
    %br
    = submit_tag "Refetch"
    = submit_tag "Refetch Meta"
