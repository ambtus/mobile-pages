module Curl
  module External
    def self.getpwd(original_url)
      case original_url
        when /livejournal/
          "yourljname:yourljpassword"
        when /sidrasue.com/
          "alice:nothingtosee"
      end
    end
    def self.geturl(original_url)
      case original_url
        when /livejournal/
          original_url + "?format=light&mode=reply&auth=digest"
        else original_url
      end
    end
    def self.getnode(original_url, html)
      body = Nokogiri::HTML(html).xpath('//body')
      case original_url
        when /livejournal/
          body.at('//blockquote').next.inner_html
        else html
      end
    end
  end
end

